{
  "name": "Snapserver",
  "image": "byteri/hassio-addons-snapserver-{arch}",
  "version": "dev",
  "slug": "snapserver",
  "description": "Snapcast server with librespot",
  "url": "https://github.com/selleronom/hassio-addons/tree/master/snapserver",
  "startup": "services",
  "arch": [
    "aarch64"
  ],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "host_network": true,
  "host_dbus": true,
  "options": {
    "name": "Hass.io",
    "bitrate": 320,
    "username": "",
    "password": "",
    "volume": 50
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
    "name": "str",
    "bitrate": "match(^(96|160|320)$)",
    "username": "str",
    "password": "str",
    "volume": "int"
  }
}
