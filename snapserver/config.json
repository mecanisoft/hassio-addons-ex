{
  "name": "Snapserver",
  "version": "0.2",
  "image": "byteri/hassio-addons-snapserver-{arch}",
  "slug": "snapserver",
  "description": "Snapcast server with librespot",
  "url": "https://github.com/selleronom/hassio-addons/tree/master/snapserver",
  "startup": "services",
  "arch": [
    "aarch64"
  ],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "host_dbus": true,
  "ports": {
    "1704/tcp": 1704,
    "1705/tcp": 1705,
    "1780/tcp": 1780
  },
  "ports_description": {
    "1704/tcp": "Snapcast server port",
    "1705/tcp": "Snapcast TCP control port (set empty to disable)",
    "1780/tcp": "Snapcast HTTP control port (set empty to disable)"
  },
  "options": {
    "name": "Hass.io",
    "bitrate": 320,
    "username": "",
    "password": "",
    "volume": 50
  },
  "schema": {
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?",
    "name": "str",
    "bitrate": "match(^(96|160|320)$)",
    "username": "str",
    "password": "str",
    "volume": "int"
  }
}