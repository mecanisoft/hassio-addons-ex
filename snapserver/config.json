{
  "name": "Snapserver",
  "version": "0.3",
  "image": "byteri/hassio-addons-snapserver-{arch}",
  "slug": "snapserver",
  "description": "Snapcast server",
  "url": "https://github.com/selleronom/hassio-addons/tree/master/snapserver",
  "startup": "services",
  "arch": ["armhf", "armv7", "aarch64"],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "ports": {
    "1704/tcp": 1704,
    "1705/tcp": 1705,
    "1780/tcp": 1780
  },
  "ports_description": {
    "1704/tcp": "Snapcast server port",
    "1705/tcp": "Snapcast TCP control port (set empty to disable)",
    "1780/tcp": "Snapcast HTTP control port (set empty to disable)"
  },
  "map": ["share:rw"],
  "options": {
    "stream": {
      "streams": [
        "pipe:///share/snapfifo/librespot?name=SpotifyConnect&sampleformat=44100:16:2",
        "pipe:///share/snapfifo/shairport?name=Shairport&sampleformat=44100:16:2"
      ],
      "buffer": "1000",
      "codec": "flac",
      "send_to_muted": "false",
      "sampleformat": "48000:16:2"
    },
    "http": {
      "enabled": "true",
      "doc_root": " "
    },
    "tcp": {
      "enabled": "true"
    },
    "logging": {
      "enabled": "true"
    },
    "server": {
      "threads": "-1",
      "datadir": "/share/snapcast/"
    }
  },
  "schema": {
    "stream": {
      "streams": ["str"],
      "buffer": "int",
      "codec": "str",
      "send_to_muted": "str",
      "sampleformat": "str"
    },
    "http": {
      "enabled": "str",
      "doc_root": "str"
    },
    "tcp": {
      "enabled": "str"
    },
    "logging": {
      "enabled": "str"
    },
    "server": {
      "threads": "int",
      "datadir": "str"
    }
  }
}
