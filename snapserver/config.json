{
  "name": "snapcast-server",
  "version": "beta",
  "slug": "snapcastserver",
  "description": "Snapcast server",
  "startup": "application",
  "boot": "auto",
  "host_network": true,
  "host_dbus": true,
  "map": ["share:rw"],
  "options": { 
    "snapserveropts": "-s pipe:///share/snapfifo/librespot?name=SpotifyConnect&sampleformat=44100:16:2",
    "log_level": "info"
  },
  "schema": {
    "snapserveropts": "str",
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)"
   },
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"]
  }
