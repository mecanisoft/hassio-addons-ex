{
  "name": "AirPlay",
  "version": "0.1",
  "image": "byteri/hassio-addons-airplay-{arch}",
  "slug": "airplay",
  "description": "AirPlay audio player piped to snapserver",
  "url": "https://github.com/selleronom/hassio-addons/tree/master/shairport-sync",
  "startup": "application",
  "arch": ["armhf", "armv7", "aarch64"],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "host_network": true,
  "host_dbus": true,
  "map": ["share:rw"],
  "options": {
    "name": "AirPlay",
    "log_level": "debug"
  },
  "schema": {
    "name": "str",
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)"
  }
}
