{
  "name": "Librespot",
  "version": "0.1",
  "image": "byteri/hassio-addons-librespot-{arch}",
  "slug": "librespot",
  "description": "Spotify Connect piped to Snapcast",
  "url": "https://github.com/selleronom/hassio-addons/tree/master/librespot",
  "startup": "services",
  "arch": ["armhf", "armv7", "aarch64"],
  "boot": "auto",
  "hassio_api": true,
  "hassio_role": "default",
  "host_dbus": true,
  "host_network": true,
  "map": ["share:rw"],
  "options": {
    "name": "Hass.io",
    "bitrate": 320,
    "username": "",
    "password": "",
    "initial_volume": 50,
    "disable_audio_cache": true,
    "linear_volume": false,
    "log_level": "debug"
  },
  "schema": {
    "name": "str",
    "bitrate": "match(^(96|160|320)$)",
    "username": "str",
    "password": "str",
    "initial_volume": "int",
    "disable_audio_cache": "bool",
    "linear_volume": "bool",
    "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)?"
  }
}
