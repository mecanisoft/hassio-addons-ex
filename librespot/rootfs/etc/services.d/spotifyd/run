#!/usr/bin/with-contenv bashio
# ==============================================================================
# Runs librespot
# ==============================================================================

name=$(bashio::config 'name')
bitrate=$(bashio::config 'bitrate')
username=$(bashio::config 'username')
password=$(bashio::config 'password')
volume=$(bashio::config 'volume')

# Run librespot
bashio::log.info 'Starting librespot...'

exec librespot  --name ${name} --backend pipe --device /share/snapfifo/librespot --bitrate ${bitrate} --disable-audio-cache --enable-volume-normalisation --linear-volume --initial-volume=${volume} --username ${username} --password ${password} --zeroconf-port 35535
